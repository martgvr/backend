<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <section class="main__container">

        <%- include('./partials/header', { user: user.data, active: 'cart' }) %>

        <article class="container products">
            <div class="products__header">
                <p>Carrito</p>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Imagen</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>

                <tbody>
                    < <% if (dataDTO.data == null) { %> <tr>
                        <td colspan="4">No hay productos en el carrito</td>
                        </tr>
                        <% } else { %>
                        <% dataDTO.data.products.forEach(item => { %>
                        <tr>
                            <td><%= item.itemName %></td>
                            <td><%= item.itemPrice %></td>
                            <td class="item__photo"><img src="<%= item.itemPhoto %>" /></td>
                            <td><button class="btn__navigation--remove" onclick="">-</button></td>
                        </tr>
                        <% }) %>
                        <% } %>
                </tbody>
            </table>

            <div class="cart__footer">
                <% if (dataDTO.data.products.length !== 0) { %>
                <p>Total: $ <%= dataDTO.total %></p>
                <button class="btn__navigation--add" onclick="finishBuy()">Finalizar compra</button>
                <% } else { %>
                <button class="btn__navigation--add" onclick="location.href='/products'">Ver productos</button>
                <% } %>
            </div>
        </article>

        <%- include('./partials/footer') %>
    </section>
</body>

<script>
    function finishBuy() {
        fetch('/carts/checkout', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
    }
</script>

</html>